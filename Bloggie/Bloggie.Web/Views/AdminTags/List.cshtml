@model List<Bloggie.Web.Models.Domain.Tag>
@{
}


<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Show all tags-Admin Funcionality </h1>
    </div>
</div>

<div class="container py-5"">
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thread>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Display Name</th>
                </tr>
            </thread>
            <tbody>
                @foreach (var tag in Model)
                {
                    <tr> 
                        <td>@tag.Id</td>
                        <td>@tag.Name</td>
                        <td>@tag.DisplayName</td>
                    </tr>
                    
                }
            </tbody>

        </table>
        
    } else
    {
        <p>No Tags Found!</p>
    }

</div>